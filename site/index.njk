{% extends 'layouts/base.njk' %}

{# Button #}

{% block content %}
  <div class="container">
    <div class="row default-intro home-intro">
      <div class="col-md-6 home-intro__left intro__text-container">
        <div class="home-intro__text">
          <h1 class="intro__title home-intro__title">{{site.homeIntroTitle}}</h1>
          <p class="home-intro__desc large-paragraph">{{ site.homeIntroDescription }}</p>
        </div>
      </div>
      <div class="col-md-6 dot-grid-bg home-intro__right">
        <img src="/uploads/intro_image.png" class="intro__image home-intro__image">
      </div>
    </div>
  </div>

  {# Post list content #}
  {% set listHeading = 'Latest blog posts' %}
  {% set listItems = collections
    .posts
    .slice(0, site.numPostsHomePage) %}
  {% include "partials/post-list.njk" %}

  {% set buttonText = "See more posts" %}
  {% set buttonLink = '/posts' %}
  {% set buttonClasses = 'btn-center' %}
  {% include "partials/button.njk" %}

  {# Post list content #}
  {% set listHeading = 'External posts' %}
  {% set listItems = collections
    .externalPosts
    .slice(0, site.numExternalPostsHomePage) %}
  {% include "partials/work-list.njk" %}
  {% set buttonText = "See more posts" %}
  {% set buttonLink = '/work' %}
  {% set buttonClasses = 'btn-center' %}
  {% include "partials/button.njk" %}

{% endblock %}