{% set navType = 'navbar' %}

<nav class="navbar navbar-expand-lg navbar-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse container base-container" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto nav-link-container">
      {% set navItems = navigation
        .items
        .slice(0, 2) %}
      {% include "partials/global/nav-links.njk" %}
    </ul>

    <ul class="navbar-nav navbar-center">
      <a id="navbar-logo" class="navbar-brand" href="/">{{ site.name }}</a>
    </ul>

    <ul class="navbar-nav ml-auto nav-link-container">
      {% set navItems = navigation
        .items
        .slice(2, navigation.items.size) %}
      {% include "partials/global/nav-links.njk" %}
    </ul>
  </div>
</nav>