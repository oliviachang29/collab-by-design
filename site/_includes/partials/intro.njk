<div class="intro default-intro dot-grid-bg">
  {% if date %}
    <p class="post-intro__date mono">{{ date | dateFilter}}</p>
  {% endif %}
  <h1 class="intro__title default-intro__title">{{  introTitle  }}</h1>
  <p class="default-intro__desc large-paragraph">{{ introDescription }}</p>
  {% if introAuthor %}
    <p class="default-intro__author large-paragraph mono">{{ introAuthor }}</p>
  {% endif %}
</div>